//inicio de código usado
// Pines de sensores
const int flexPin = A0;
const int fsr1Pin = A1;
const int fsr2Pin = A2;

// Pines de LEDs
const int ledVerde = 9;   // PWM
const int ledRojo = 8;
const int ledAmarillo = 7;

// Umbrales para los FSR (ajustar tras calibración)
const int umbralFSR1 = 300;  
const int umbralFSR2 = 300;  

void setup() {
  pinMode(ledVerde, OUTPUT);
  pinMode(ledRojo, OUTPUT);
  pinMode(ledAmarillo, OUTPUT);
  
  Serial.begin(9600);
}

void loop() {
  // Lecturas analógicas
  int flexValue = analogRead(flexPin);
  int fsr1Value = analogRead(fsr1Pin);
  int fsr2Value = analogRead(fsr2Pin);

  // --- LED verde con PWM proporcional a la flexión ---
  int brillo = map(flexValue, 0, 1023, 0, 255);
  analogWrite(ledVerde, brillo);

  // --- LED rojo controlado por FSR1 ---
  if (fsr1Value > umbralFSR1) {
    digitalWrite(ledRojo, HIGH);
  } else {
    digitalWrite(ledRojo, LOW);
  }

  // --- LED amarillo controlado por FSR2 ---
  if (fsr2Value > umbralFSR2) {
    digitalWrite(ledAmarillo, HIGH);
  } else {
    digitalWrite(ledAmarillo, LOW);
  }

  // Enviar datos al monitor serie
  Serial.print("Flex: "); Serial.print(flexValue);
  Serial.print(" | FSR1: "); Serial.print(fsr1Value);
  Serial.print(" | FSR2: "); Serial.println(fsr2Value);

  delay(50); // pequeña pausa
}
//fin
